# Production Environment Variables for RunPod
NODE_ENV=production
PORT=8080

# MongoDB - Use your production MongoDB URI
MONGODB_URI_PROD=your_production_mongodb_uri_here

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_customers,write_customers,read_checkouts,write_checkouts
SHOPIFY_APP_URL=https://your-app-domain.com

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# CORS Origins (add your frontend domains)
CORS_ORIGINS=https://cartsaver-ai.netlify.app,https://*.myshopify.com,https://admin.shopify.com

# Optional: Add any other environment variables your app needs 